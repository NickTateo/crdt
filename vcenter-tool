#import <stuff>

#@STRINGS
prompt = "vctool > "
header = "[ VCENTER-TOOL ]\nType help for options."
helptext = """0) exit program
1) add host [OS] [RAM] [processors] [cores] [name]
2) add vuln [vuln] [host]
3) generate script
4) load script [script]
5) list hosts
6) list vulns [host]"""
errortext = "\nError: Invalid selection!"

def printHeader():
    print(header)
    
def printHelp():
    print(helptext)
    
def getChoice():
    print(prompt, end='')
    
    try:
        selection = int(input())
        if(selection < 0 or selection > 7):
            print(errortext)
        return selection
        
    except ValueError as error:
        print(errortext)
    except Exception as error:
        print(errortext)
    
    return -1
    
def addHost():
    #TODO
    print("adding host...")    
    
def addVuln():
    #TODO
    print("adding vuln...")

def generateScript():
    #TODO
    print("generating script...")
    
def loadScript():
    #TODO
    print("loading script...")

def listHosts():
    #TODO
       print("listing hosts...")
       
def listVuln(): #pass host as arg?
    #TODO
    print("listing vulns...")

def main():
    ops = {1 : addHost, 2 : addVuln, 3 : generateScript, 4 : loadScript, 5 : listHosts, 6 : listVuln}
    
    printHeader()
    printHelp()
    
    sel = getChoice()
    while(sel != 0):
        if sel in ops:
            #getArgs
            ops.get(sel)()
        sel = getChoice()

    print("Exiting...")

if __name__ == "__main__":
    main()
